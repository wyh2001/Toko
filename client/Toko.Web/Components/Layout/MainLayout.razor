@inherits LayoutComponentBase
@using Toko.Web.Client.Components
@inject NavigationManager Navigation

<div class="toko-layout">
    <header class="toko-header">
        <div class="toko-header-content">
            <div class="toko-title" @onclick="NavigateToHome">
                <span class="toko-title-text">TOKO TOKO</span>
            </div>
            <div class="toko-user-section">
                <PlayerNameSettings />
            </div>
        </div>
    </header>

    <main class="toko-main">
        @Body
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private void NavigateToHome()
    {
        Navigation.NavigateTo("/");
    }
}
