@inherits LayoutComponentBase
@using Toko.Web.Client.Components
@inject NavigationManager Navigation

<div class="toko-layout" data-page="@(IsHomePage ? "home" : "other")">
    <header class="toko-header">
        <div class="toko-header-content">
            <div class="toko-title">
                <a href="/" class="toko-title-link">
                    <span class="toko-title-text">TOKO TOKO</span>
                </a>
            </div>
            <div class="toko-user-section">
                <PlayerNameSettings />
            </div>
        </div>
    </header>

    <main class="toko-main">
        @Body
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool IsHomePage => CheckIfHomePage();

    protected override void OnInitialized()
    {
        Navigation.LocationChanged += (sender, e) => StateHasChanged();
    }

    private bool CheckIfHomePage()
    {
        var uri = new Uri(Navigation.Uri);
        return uri.AbsolutePath == "/" || uri.AbsolutePath == "";
    }
}
